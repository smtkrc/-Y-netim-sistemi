<body class="text-center">

   
    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-signin" }))
    {
            <h1 class="h3 mb-3 fw-normal">Lütfen Giriş yapınız</h1>

            <div class="form-floating">
                <input type="text" class="form-control" id="KullaniciAd" name="KullaniciAd" placeholder="name@example.com">
                <label for="KullaniciAd">Kullanıcı adınızı giriniz</label>
            </div>
            <div class="form-floating">
                <input type="password" name="PersonelParola" class="form-control" id="PersonelParola" placeholder="Password">
                <label for="PersonelParola">Şifrenizi giriniz</label>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Giriş yap</button>
    }




</body>
